@page "/shoppingcart"

<PageTitle>Shopping Cart</PageTitle>

<h2>Welcome to your Shopping Cart</h2>
<p>Go ahead, start adding items.</p>

<div class="container">
    <div class="row">
        
        <div class="col">
            <button class="mb-1 btn btn-primary" @onclick="AddApple">Pick an Apple!</button>
            <ItemComponent Name="@("Apple")" 
                           Count="NumApples">
            </ItemComponent>
        </div>

        <div class="col">
            <button class="mb-1 btn btn-primary" @onclick="AddBanana">Pick a Banana!</button>
            <ItemComponent Name="@("Banana")" 
                           Count="NumBananas">
            </ItemComponent>
        </div>

        <!--Orange-->
        <div class="col">
            <button class="mb-1 btn btn-primary" @onclick="AddOrange">Pick an Orange!</button>
            <ItemComponent Name="@("Orange")" 
                           Count="NumOranges">
            </ItemComponent>
        </div>

    </div>
    <div class="row">
        <div class="col">
            <div class="card" style="background-color:#f5f5f5;">
              
              <div class="card-body">
                <h5 class="card-title">Total Items: @(NumApples + NumOranges + NumBananas)</h5>
              </div>
            </div>
        </div> 
    </div>
</div>